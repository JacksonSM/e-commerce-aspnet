@model IEnumerable<AspStore.Application.ViewModels.ProdutoViewModel>
<!-- banner -->
<div class="page-head_agile_info_w3l">

</div>
<!-- //banner -->
<!-- top Products -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>N</span>ossos
            <span>P</span>rodutos
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-9">
                <div class="wrapper">
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">                       
                        <div class="row">

                            @foreach (var produto in @Model)
                            {
                                <!-- first section -->

                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="/uploads/imagens_produtos/@(produto.CodigoInterno)_principal.png" height="200" width="200" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a asp-controller="Produto" asp-action="PaginaProduto" asp-route-produtoId="@produto.Id" class="link-product-add-cart">Ver Mais</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a href="single.html">@produto.Nome</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">@Html.DisplayFor(modelItem => produto.Preco)</span>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                <form action="#" method="post">
                                                    <fieldset>
                                                        <input type="hidden" name="produtoId" value="@produto.Id" />
                                                        <input type="submit" name="submit" value="+ Carrinho" class="button btn" />
                                                    </fieldset>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- //first section -->
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- //top products -->
