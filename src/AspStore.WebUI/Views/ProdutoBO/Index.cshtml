@model IEnumerable<AspStore.Application.ViewModels.ProdutoViewModel>

@{
    Layout = "~/Views/Shared/_LayoutBackOffice.cshtml";
}

<h1>Lista de Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td>
                <a asp-controller="ProdutoBO" asp-action="Edit" asp-route-id="@item.Id"><span class="material-icons" title="Editar Produto">edit</span> </a>
                <a asp-controller="ProdutoBO" asp-action="Details" asp-route-id="@item.Id"><span class="material-icons" title="Detalhes Produto">info</span> </a>
                <a asp-controller="ProdutoBO" asp-action="Delete" asp-route-id="@item.Id"><span class="material-icons" title="Excluir Produto">delete</span> </a>
            </td>
        </tr>
}
    </tbody>
</table>
