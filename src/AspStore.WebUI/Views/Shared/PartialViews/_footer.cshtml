@using AspStore.Application.ViewModels
@using AspStore.WebUI.Services.Interfaces
@inject IContatoService _contatoService
@{

    var contato = _contatoService.ObterContato();
}

<footer>
    <div class="footer-top-first">
        <div class="container py-md-5 py-sm-4 py-3">
            <!-- footer first section -->
            <h2 class="footer-top-head-w3l font-weight-bold mb-2">Electronics :</h2>
            <p class="footer-main mb-4">
                Se você está pensando em comprar um novo laptop, procurando um novo e potente som automotivo ou comprando uma nova HDTV, nós facilitamos
                encontre exatamente o que você precisa a um preço que você pode pagar. Oferecemos preços baixos todos os dias em TVs, laptops, telefones celulares, tablets
                e iPads, videogames, computadores de mesa, câmeras e filmadoras, áudio, vídeo e muito mais.
            </p>
            <!-- //footer first section -->
            <!-- footer second section -->
            <div class="row w3l-grids-footer border-top border-bottom py-sm-4 py-3">
                <div class="col-md-4 offer-footer">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="fas fa-dolly"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Frete Grátis</h3>
                            <p>Pedidos acima de R$ 100</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offer-footer my-md-0 my-4">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Entrega Rapida</h3>
                            <p>No Brasil todo.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 offer-footer">
                    <div class="row">
                        <div class="col-4 icon-fot">
                            <i class="far fa-thumbs-up"></i>
                        </div>
                        <div class="col-8 text-form-footer">
                            <h3>Grande escolha</h3>
                            <p>de Produtos</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- //footer second section -->
        </div>
    </div>
    <!-- footer third section -->
    <div class="w3l-middlefooter-sec">
        <div class="container py-md-5 py-sm-4 py-3">
            <div class="row footer-info w3-agileits-info">
                <!-- footer categories -->
                <div class="col-md-3 col-sm-6 footer-grids">
                    <h3 class="text-white font-weight-bold mb-3">Categorias</h3>

                    <ul>
                        @foreach (var categoria in @ViewBag.Categorias as SelectList)
                        {
                            <li class="mb-3">
                                <a asp-action="Index" asp-route-categoriaSelecionada="@categoria.Value">@categoria.Text</a>
                            </li>
                        }

                    </ul>

                </div>
                <!-- //footer categories -->
                <!-- quick links -->
                <div class="col-md-3 col-sm-6 footer-grids mt-sm-0 mt-4">
                    <h3 class="text-white font-weight-bold mb-3">Links</h3>
                    <ul>
                        <li class="mb-3">
                            <a asp-action="SobreNos">Sobre Nós</a>
                        </li>
                        <li class="mb-3">
                            <a asp-action="Contato">Contato</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 footer-grids mt-md-0 mt-4">
                    <h3 class="text-white font-weight-bold mb-3">Entre em Contato</h3>
                    <ul>
                        <li class="mb-3">
                            <i class="fas fa-map-marker"></i> @contato.Cidade @contato.CEP, BR.
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone"></i> @contato.Telefone
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-envelope-open"></i>
                            <a href="mailto:@(contato.Email)"> Email @(contato.Email)</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6 footer-grids w3l-agileits mt-md-0 mt-4">
                    <!-- social icons -->
                    <div class="footer-grids  w3l-socialmk mt-3">
                        <h3 class="text-white font-weight-bold mb-3">Siga-nós</h3>
                        <div class="social">
                            <ul>
                                <li>
                                    <a class="icon fb" href="@contato.LinkFacebook">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="icon tw" href="@contato.LinkTwitter">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- //social icons -->
                </div>
            </div>
            <!-- //quick links -->
        </div>
    </div>
    <!-- //footer third section -->
    <!-- footer fourth section -->
    <div class="agile-sometext py-md-5 py-sm-4 py-3">
        <div class="container">
            <!-- payment -->
            <div class="sub-some child-momu mt-4">
                <h5 class="font-weight-bold mb-3">Meios de Pagamento</h5>
                <ul>
                    <li>
                        <img src="images/pay2.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay5.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay1.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay4.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay6.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay3.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay7.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay8.png" alt="">
                    </li>
                    <li>
                        <img src="images/pay9.png" alt="">
                    </li>
                </ul>
            </div>
            <!-- //payment -->
        </div>
    </div>
    <!-- //footer fourth section (text) -->
</footer>